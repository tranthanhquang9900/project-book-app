<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="bottom">Books List</h1>
  <%= link_to 'New Book', new_book_path,class:"btn btn--pill btn--green bottom" %>
  <table class="table">
    <thead>
      <tr class="center-text ">
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr class="center-text border-bottom">
          <td class="border-right"><%= book.title %></td>
          <td class="border-right"><%= book.author %></td>
          <td class="border-right"><%= book.description %></td>
          <td><%= link_to 'Update', edit_book_path(book),class:"btn btn--pill btn--blue" %></td>
          <td><%= link_to 'Delete', book,class:"btn btn--pill btn--red", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
